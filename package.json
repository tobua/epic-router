{
  "name": "epic-router",
  "description": "Router for the Web and React Native.",
  "version": "0.0.0-development",
  "repository": "github:tobua/epic-router",
  "homepage": "https://epic-router.vercel.app",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "check": "biome check --write .",
    "test": "bun test --preload ./test/copy-source.ts",
    "types": "bun test/copy-source.ts && tsc && tsc --project ./test/epic/tsconfig.json && tsc --project ./test/preact/tsconfig.json"
  },
  "workspaces": [
    "demo",
    "demo-preact"
  ],
  "dependencies": {
    "epic-state": "^0.17.3",
    "history": "^5.3.0",
    "logua": "^3.0.3",
    "query-string": "^9.2.2",
    "url-join": "^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@happy-dom/global-registrator": "^18.0.1",
    "@testing-library/preact": "^3.2.4",
    "@types/bun": "^1.2.19",
    "@types/history": "^5.0.0",
    "@types/react": "^19.1.9",
    "epic-jsx": "^0.11.3",
    "preact": "^10.27.0",
    "react": "^19.1.1",
    "typescript": "^5.9.2",
    "zero-configuration": "^1.0.5"
  },
  "peerDependencies": {
    "epic-jsx": ">= 0.7",
    "epic-state": ">= 0.3",
    "preact": ">= 10"
  },
  "peerDependenciesMeta": {
    "epic-jsx": {
      "optional": true
    },
    "preact": {
      "optional": true
    }
  },
  "trustedDependencies": [
    "zero-configuration"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./index.tsx",
  "exports": {
    ".": {
      "default": "./index.tsx"
    }
  },
  "files": [
    "*.ts",
    "*.tsx"
  ],
  "keywords": [
    "state",
    "react",
    "router",
    "web"
  ],
  "publishConfig": {
    "provenance": true
  },
  "configuration": {
    "gitignore": [
      "extends:bundle",
      "test/*/source"
    ],
    "vscode": "biome",
    "biome": [
      {
        "extends": "recommended",
        "linter": {
          "rules": {
            "correctness": {
              "noNodejsModules": "off"
            },
            "style": {
              "useComponentExportOnlyModules": "off"
            }
          }
        },
        "files": {
          "includes": [
            "**/*",
            "!demo/**",
            "!demo-preact/**",
            "!test/**"
          ]
        }
      },
      {
        "folder": "test",
        "extends": "test",
        "root": false,
        "files": {
          "includes": [
            "**/*",
            "!**/source/**"
          ]
        }
      }
    ],
    "typescript": [
      {
        "extends": "plugin",
        "compilerOptions": {
          "jsx": "react-jsx"
        },
        "files": [
          "index.tsx"
        ]
      },
      {
        "extends": "web",
        "folder": "test/epic",
        "compilerOptions": {
          "paths": {
            "react": [
              "./../../node_modules/epic-jsx"
            ],
            "react/jsx-runtime": [
              "./../../node_modules/epic-jsx"
            ],
            "react/jsx-dev-runtime": [
              "./../../node_modules/epic-jsx"
            ]
          }
        }
      },
      {
        "extends": "web",
        "folder": "test/preact",
        "compilerOptions": {
          "jsxImportSource": "preact",
          "paths": {
            "react": [
              "./../../node_modules/preact/dist/preact.mjs"
            ],
            "react/jsx-runtime": [
              "./../../node_modules/epic-jsx"
            ],
            "react/jsx-dev-runtime": [
              "./../../node_modules/preact/jsx-runtime/dist/jsxRuntime.mjs"
            ]
          }
        }
      }
    ]
  }
}
