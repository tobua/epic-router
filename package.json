{
  "name": "epic-react-router",
  "description": "MobX based Router for the Web and React Native.",
  "version": "0.0.0-development",
  "repository": "github:tobua/epic-react-router",
  "homepage": "https://epic-react-router.vercel.app",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "build": "padua build",
    "start": "padua watch",
    "test": "padua test"
  },
  "dependencies": {
    "history": "^5.3.0",
    "query-string": "^7.1.1",
    "url-join": "^5.0.0"
  },
  "peerDependencies": {
    "mobx": "^6.6.0",
    "mobx-react-lite": "^3.4.0",
    "react": "^18.1.0"
  },
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.js",
  "exports": {
    "default": "./dist/index.js"
  },
  "source": "index.tsx",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "index.tsx"
  ],
  "keywords": [
    "mobx",
    "react",
    "router",
    "web"
  ],
  "devDependencies": {
    "@types/history": "^4.7.11",
    "@types/react": "^18.0.12",
    "mobx": "^6.6.0",
    "mobx-react-lite": "^3.4.0",
    "padua": "^0.5.6",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-test-renderer": "^18.1.0"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs",
    "rules": {
      "@typescript-eslint/lines-between-class-members": 0,
      "react/function-component-definition": 0
    }
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.json"
      }
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "dist"
    ],
    "transform": {
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./node_modules/padua/configuration/.babelrc"
        }
      ],
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!url-join).*/"
    ]
  },
  "engines": {
    "node": ">= 14"
  }
}
