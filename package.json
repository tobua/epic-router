{
  "name": "epic-router",
  "description": "Router for the Web and React Native.",
  "version": "0.0.0-development",
  "repository": "github:tobua/epic-router",
  "homepage": "https://epic-router.vercel.app",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "check": "biome check --write .",
    "test": "bun test --preload ./test/copy-source.ts",
    "types": "bun test/copy-source.ts && tsc && tsc --noEmit --project ./test/epic/tsconfig.json && tsc --noEmit --project ./test/preact/tsconfig.json"
  },
  "workspaces": [
    "demo"
  ],
  "dependencies": {
    "epic-state": "^0.14.0",
    "history": "^5.3.0",
    "logua": "^3.0.3",
    "query-string": "^9.1.1",
    "url-join": "^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@happy-dom/global-registrator": "^16.6.0",
    "@testing-library/preact": "^3.2.4",
    "@types/bun": "^1.1.17",
    "@types/history": "^5.0.0",
    "@types/react": "^19.0.7",
    "epic-jsx": "^0.9.5",
    "preact": "^10.25.4",
    "react": "^19.0.0",
    "typescript": "^5.7.3",
    "zero-configuration": "^0.17.6"
  },
  "peerDependencies": {
    "epic-jsx": ">= 0.7",
    "epic-state": ">= 0.3",
    "preact": ">= 10"
  },
  "peerDependenciesMeta": {
    "epic-jsx": {
      "optional": true
    },
    "preact": {
      "optional": true
    }
  },
  "trustedDependencies": [
    "zero-configuration"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./index.tsx",
  "exports": {
    ".": {
      "default": "./index.tsx"
    }
  },
  "files": [
    "*.ts",
    "*.tsx"
  ],
  "keywords": [
    "state",
    "react",
    "router",
    "web"
  ],
  "publishConfig": {
    "provenance": true
  },
  "configuration": {
    "gitignore": [
      "extends:bundle",
      "test/*/source"
    ],
    "vscode": "biome",
    "biome": {
      "extends": "recommended",
      "linter": {
        "rules": {
          "correctness": {
            "noNodejsModules": "off"
          }
        }
      },
      "files": {
        "ignore": [
          "demo",
          "source"
        ]
      }
    },
    "typescript": [
      {
        "extends": "plugin",
        "compilerOptions": {
          "jsx": "react-jsx"
        },
        "files": [
          "index.tsx"
        ]
      },
      {
        "extends": "web",
        "folder": "test/epic",
        "compilerOptions": {
          "paths": {
            "react": [
              "./../../node_modules/epic-jsx"
            ],
            "react/jsx-dev-runtime": [
              "./../../node_modules/epic-jsx"
            ]
          }
        }
      },
      {
        "extends": "web",
        "folder": "test/preact",
        "compilerOptions": {
          "jsxImportSource": "preact",
          "paths": {
            "react": [
              "./../../node_modules/preact/dist/preact.mjs"
            ],
            "react/jsx-dev-runtime": [
              "./../../node_modules/preact/jsx-runtime/dist/jsxRuntime.mjs"
            ]
          }
        }
      }
    ]
  }
}
